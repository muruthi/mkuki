<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fernamuruthi.mkuki">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.HuntActivity"
            android:label="@string/title_activity_hunt"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fernamuruthi.mkuki.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.PhotoViewActivity"
            android:label="@string/title_activity_photo_view"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.Picture">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fernamuruthi.mkuki.activity.MainActivity" />
        </activity>
    </application>

</manifest>